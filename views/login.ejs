<%- include('partials/header') %>

<div class="container py-5 bg-light">
    

    <div class="row mt-4">
        <div class="col-md-6 col-10 offset-1 offset-md-3 shadow p-4">
            <h3 class="text-center mb-3">Login Here!</h3>
            <%- include('partials/message') %>
            <form action="/login" method="POST">
                <div class="mb-3">
                  <input type="email" name="email" class="form-control" id="email" placeholder="Enter Email...">
                </div>
                <div class="mb-3">
                  <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Enter password...">
                </div>
                <button type="submit" class="btn btn-danger w-100">Login</button>
              </form>
              <hr/>
              <div class="mt-3 d-flex justify-content-between">
                <a href="/signup" class="text-decoration-none text-danger"><small>Create an account?</small></a>
                <a href="/forgetpassword" class="text-decoration-none text-danger"><small>Forget Password?</small></a>
              </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>